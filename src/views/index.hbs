<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="css/style.css" />
    <title>Home</title>
  </head>
  <body class="bg-body-secondary">
    <nav class="navbar navbar-expand-lg bg-white container-fluid">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img
            src="images/logo_navbar.png"
            alt="Logo"
            style="width: 35px; height: auto"
          />
        </a>
        <div class="navbar-toggler-center">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>

        <div
          class="collapse navbar-collapse text-center"
          id="navbarSupportedContent"
        >
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-3">
              <a
                class="nav-link active text-danger fw-bolder"
                aria-current="page"
                href="index"
              >Home</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link" href="myproject">Add Project</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link" href="testimonial">My Testimonials</a>
            </li>
          </ul>
          <div
            class="d-flex collapse justify-content-center fw-bolder"
            role="search"
          >
            <a class="btn bg-black text-white" href="contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <!--start card-home -->
    <div class="container my-5">
      <div class="row bg-white p-5 rounded">
        <div class="col-lg-9 order-lg-0">
          <!-- Kolom utama pada tampilan desktop -->
          <div class="rounded p-4">
            <h3 class="mb-3">Hi Welcome To My Hut</h3>
            <p class="mb-5" style="text-align: justify">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsam,
              modi laborum repellat cupiditate voluptatibus repudiandae
              distinctio quidem corrupti? Placeat, maiores et quaerat aliquam
              dolores recusandae eveniet consequuntur accusantium distinctio.
              Aut!
            </p>
            <div class="d-flex mt-2 mb-5">
              <button class="bg-black text-white rounded">Contact</button>
              <h6 class="ms-3">Download CV</h6>
            </div>
            <div
              class="col-lg-2 order-lg-1 d-flex justify-content-center"
              style="margin-top: 80px; font-size: large; font-weight: bold"
            >
              <i class="fas fa-house fw-bolder me-2"></i>
              <i class="fab fa-facebook fw-bolder me-2"></i>
              <i class="fab fa-github fw-bolder me-2"></i>
              <i class="fab fa-discord fw-bolder me-2"></i>
            </div>
          </div>
        </div>
        <div class="col-lg-3 order-lg-1 d-flex justify-content-center">
          <!-- Kolom gambar pada tampilan desktop -->
          <div
            class="bg-white shadow-lg rounded text-center"
            style="width: 110%"
          >
            <img
              src="images/imageshome.jpg"
              alt="Profile Image"
              class="rounded-top"
              style="object-fit: cover; height: 300px; width: 100%"
            />
            <h5>GUSWANDI</h5>
            <p>Full Stack Developer</p>
          </div>
        </div>
      </div>
    </div>
    <!-- end card-home -->

    <div class="mb-5 container-fluid">
      <hr />
      <div class="mb-5">
        <h3 class="text-center fw-bolder">MY PROJECT</h3>
      </div>
      <div class="cards-my-projects row gap-5 justify-content-center d-flex">
        {{#each dataProject}}
          <div
            class="card row-col-6 bg-white"
            style="width: 370px; height: auto"
          >
            <div style="width: 100%; height: auto">
              <div style="width: 100%; height: auto">
                <img
                  src="images/anak.png"
                  class="card-img-top"
                  alt="my-project"
                  style="object-fit: cover; width: 100%; height: 250px"
                />
              </div>

              <div class="card-body">
                <a
                  href="/projectDetail/{{this.id}}"
                  style="text-decoration: none;"
                  class="text-black"
                >

                  <h3>{{this.name}}</h3>
                </a>

                <h6>{{this.start_date}} âž– {{this.end_date}}</h6>
                <h6>Durasi: {{this.duration}}</h6>
                <h6 class="card-text">{{this.description}}</h6>
                <div class="project-icon">
                  {{#if this.react}}
                    <i class="fa-brands fa-react" style="margin-right: 8px"></i>
                  {{/if}}
                  {{#if this.java}}
                    <i
                      class="fa-brands fa-square-js"
                      style="margin-right: 8px"
                    ></i>
                  {{/if}}
                  {{#if this.node_js}}
                    <i
                      class="fa-brands fa-node-js"
                      style="margin-right: 8px"
                    ></i>
                  {{/if}}
                  {{#if this.socket_io}}
                    <i class="fa-brands fa-vuejs" style="margin-right: 8px"></i>
                  {{/if}}
                </div>

                <div class="d-flex mt-2">
                  <a
                    href="/editProeject/{{this.id}}"
                    class="w-50 rounded bg-black text-white text-center"
                    style="border: none; margin-right: 8px; text-decoration:none"
                  >
                    edit
                  </a>
                  <a
                    href="/deleteProject/{{this.id}}"
                    class="w-50 rounded bg-black text-white text-center"
                    style="border: none; text-decoration:none"
                  >
                    delete
                  </a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>